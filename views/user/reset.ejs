<%- include('../partials/auth-header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 ml-auto mr-auto">
            <div class="card card-register" style="height: 200px;" >
                <h3 class="title mx-auto" style="color: white; font-weight: 400;">Reset Password</h3>
                <form class="register-form" action="/reset/<%= token %>" method="POST">
                    <div class="form-group mt-4">
                        <label for="">New Password</label>
                        <input type="password" class="form-control" placeholder="New Password" name="password" autofocus required>
                    </div>
                    <div class="form-group">
                        <label for="">Confirm Password</label>
                        <input type="password" name="confirm" class="form-control" placeholder="Confirm Password" required>
                    </div>
                    <button class="btn btn-black btn-block btn-round mt-5">Update Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function () {
    var loadTime = window.performance.timing.domContentLoadedEventEnd-window.performance.timing.navigationStart; 
      console.log('Page load time is '+ loadTime);
    }
  </script>

</body>
</html>