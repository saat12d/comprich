<%- include('partials/static-header') %>

<div class="container">
    <div class="row justify-content-center">
        <h1 class="col-md-12 text-center">Add a New Competition</h1>

        <div class="col-xs-12 col-md-6 col-lg-4" style="margin: 25px auto;">
            <form action="/competitions" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Name of Competition</label>
                    <input type="text" class="form-control" name="competition[title]" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <textarea name="competition[desc]" id="" class="form-control" rows="7" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="">Location</label>
                    <input type="text" name="competition[location]" class="form-control" placeholder="Competition Location">
                </div>
                <div class="form-group">
                    <label for="">Date</label>
                    <input type="date" name="competition[date]" class="form-control" placeholder="DD/MM/YYYY">
                </div>
                <div class="form-group">
                    <label for="images">Images</label>
                    <input type="file" class="form-control-file" name="images" multiple accept="image/*">
                </div>
                <div class="form-group">
                    <label class="" for="">Details</label>
                    <textarea class="form-control" name="competition[details]" id="" rows="8" placeholder="Additional Details"></textarea>
                </div>
                <div class="form-group">
                    <label for="signupLink">Sign up Link</label>
                    <input class="form-control" type="text" name="competition[signupLink]" placeholder="Sign Up Link">
                </div>
                <div class="form-group">
                    <label for="signupLink">Social Media Link</label>
                    <input type="text" class="form-control" name="competition[smLink]" placeholder="Social Media Link">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
        </div>

    </div>
</div>

<%- include('partials/footer') %>