<%- include('../partials/static-header') %>

<div class="container">
    <h2 class="display-5 mb-4"><%= blog.title %></h2>
    <p class="lead">by <%= blog.author %></p>
    <hr>

    <img src="<%= blog.image %>" alt="" class="mb-5 col-md-12" style="max-height: 70vh;object-fit: contain;">

    <% blog.body = blog.body.substring(1, blog.body.length - 1) %>

    <div id="body" style="color: black"><%- blog.body %></div>


</div>

<script>
    document.getElementById('body').innerHTML = blog.body
</script>

<%- include('../partials/footer') %>
